{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": { "es6": true },
  "plugins": [
    "node",
    "import",
    "lodash"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "rules": {
    "import/no-commonjs": 2,
    "max-len": [2, 120, 8],
    "newline-after-var": [2, "always"],
    "newline-before-return": 2,
    "no-trailing-spaces": 2,
    "no-var": 2,
    "node/no-unsupported-features": 0,
    "quotes": [2, "single"],
    "semi": [2, "never"]
  }
}
